//@version=5
indicator("ATR", overlay = true)

atr = ta.atr(input(14))
multiplier = (input(1.0) * atr)

delay = input(0)


upLimit = close[delay] + multiplier
downLimit = close[delay] - multiplier

plot(upLimit, color = color.blue)
plot(downLimit, color = color.red)

